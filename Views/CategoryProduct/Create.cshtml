@model Machine_proj.Models.Category

@{
    ViewBag.Title = "Create Category";
}

<h2>Create Category</h2>

@using (Html.BeginForm("Create", "CategoryProduct", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryCode, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.CategoryCode, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Create</button> <!-- Change the button type to submit to trigger the form submission -->

    <!-- Remove the onclick attribute from the button -->

    <!-- Move the script outside of the form to avoid issues -->
}

<script>
    function redirectToCategory() {
        window.location.href = '@Url.Action("Create", "CategoryProduct")';
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
